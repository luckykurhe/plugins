{
  "name": "tabdetails",
  "version": "0.0.0.1",
  "description": "Show tabdetails for current Tab - to get status, url, title etc",
  "manifest_version": 2,

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "permissions": ["tabs"],

  "browser_action": {
    "default_title": "tabdetails",
    "default_icon": "icon.png",
    "default_popup": "tabdetails.html"
  }
  
}